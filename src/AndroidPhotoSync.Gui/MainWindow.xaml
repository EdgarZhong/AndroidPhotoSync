<Window x:Class="AndroidPhotoSync.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndroidPhotoSync.Gui"
        mc:Ignorable="d"
        Title="AndroidPhotoSync" Height="520" Width="820" Background="#F7F7F8">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="AndroidPhotoSync" FontSize="24" FontWeight="SemiBold" Foreground="#111111"/>
        <TextBlock Grid.Row="0" Text="极简照片同步" Margin="0,32,0,0" Foreground="#666666"/>

        <Grid Grid.Row="1" Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="手机目录"/>
            <TextBox Grid.Row="0" Grid.Column="1" Height="32" Margin="0,0,12,0" x:Name="RemotePathBox"/>
            <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Text="/sdcard/..." Foreground="#999999"/>

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0" Text="备份目录"/>
            <TextBox Grid.Row="1" Grid.Column="1" Height="32" Margin="0,12,12,0" x:Name="LocalPathBox"/>
            <Button Grid.Row="1" Grid.Column="2" Margin="0,12,0,0" Height="32" Content="选择目录" Click="OnBrowseLocalClicked"/>

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0" Text="选择设备"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Height="32" Margin="0,12,12,0" x:Name="DeviceComboBox"/>
            <Button Grid.Row="2" Grid.Column="2" Margin="0,12,0,0" Height="32" Content="刷新设备" Click="OnRefreshDevicesClicked"/>
            
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,16,0,0">
                <CheckBox x:Name="RecursiveBox" Content="递归备份子目录" IsChecked="True" Margin="0,0,24,0"/>
                <CheckBox x:Name="BackupAllBox" Content="备份所有文件类型" IsChecked="False"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Margin="0,28,0,0" Orientation="Horizontal">
            <Button x:Name="StartButton" Width="140" Height="36" Content="开始同步" Click="OnStartSyncClicked"/>
            <TextBlock x:Name="StatusText" Margin="16,8,0,0" Foreground="#555555" Text="等待操作"/>
        </StackPanel>

        <Border Grid.Row="3" Margin="0,24,0,0" Background="#EFEFF1" CornerRadius="6" VerticalAlignment="Stretch">
            <TextBox x:Name="ResultText" Margin="6" Foreground="#333333" TextWrapping="Wrap" 
                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas, Segoe UI"/>
        </Border>
    </Grid>
</Window>
